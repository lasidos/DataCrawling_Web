@model DataCrawling_Web.Models.Commons.PagingInfo

<nav aria-label="Page navigation" class="page-item">
    <ul class="pagination">
        @if (Model != null && Model.TotalPages > 1)
        {
            if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0);" onclick="GetGroupUser(@(Model.CurrentPage - 1));" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="javascript:void(0);" onclick="GetGroupUser(@i);">@i</a>
                </li>
            }
            if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0);" onclick="GetGroupUser(@(Model.CurrentPage + 1));" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        }
        else
        {
            <li class="page-item active">
                <a class="page-link" href="javascript:void(0);" onclick="GetGroupUser(1);">1</a>
            </li>
        }
    </ul>
</nav>

<style>
    .page-tr td {
        border: none !important;
    }

    .page-item {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
    }

        .page-item ul {
            display: flex;
        }

            .page-item ul li + li {
                margin-left: 15px;
            }

        .page-item li.active a{
            font-weight: bold;
            color: #000;
        }
</style>