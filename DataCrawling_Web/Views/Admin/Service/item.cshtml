                                            <col style="width:20%">
                                            <col style="width:10%">
                                            <col style="width:10%">
                                            <col style="width:40%">
                                            @if (ViewBag.View != "sel")
                                            {
                                                <col style="width:10%">
                                            }
                                        </colgroup>
                                        <thead>
                                            <tr>
                                                <th scope="col">파라미터</th>
                                                <th scope="col" class="just-pc">타입</th>
