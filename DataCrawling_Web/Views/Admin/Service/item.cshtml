                                                {
                                                    <th scope="col">수정</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.RequestList)
                                            {
                                                if (ViewBag.View == "sel")
                                                {
                                                    <tr class="paramtrCls">
                                                        <td data-paramtr-nm="serviceKey">@(item.P_NAME_E)</td>
                                                        <td class="just-pc">@item.P_TYPE</td>
