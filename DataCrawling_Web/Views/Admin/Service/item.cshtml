                            <h2 class="subTits">@Model.SelInfo.TITLE</h2>
                        }
                        else
                        {
                            <input type="text" id="title" value="@Model.SelInfo.TITLE" class="subTits" />
                        }
                    </div>

                    <div class="DataSubject">
