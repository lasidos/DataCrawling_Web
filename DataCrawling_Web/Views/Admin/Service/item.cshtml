                            <div class="tab-cont">
                                <div class="top-info">
                                    <h4 class="tit">요청 URL</h4>
                                </div>
                                <div class="col-table left line">
                                    <p class="tit-hide">요청 URL</p>
                                    <table>
                                        <caption>요청 URL 입니다.</caption>
                                        <colgroup>
                                            <col style="width:80%">
                                            <col style="width:20%">
                                            <col>
                                        </colgroup>
                                        <thead>
                                            <tr>
                                                <th scope="col">요청 URL</th>
                                                <th scope="col">결괏값 반환 형식</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="paramtrCls">
                                                <td data-paramtr-nm="serviceKey">
                                                    @if (ViewBag.View == "sel")
                                                    {
                                                        @Model.SelInfo.D_LINK
                                                    }
