                                        {
                                            @Model.SelInfo.TITLE
                                        }
                                        else
                                        {
                                            <input type="text" id="subTits" value="@Model.SelInfo.TITLE" class="subTits" />
                                        }
                                    </td>
                                </tr>
                            }
                            <tr class="bg-beige tr">
                                <th class="th custom-cell-border-bottom custom-cell-border-right">분류</th>
                                <td class="td custom-cell-border-bottom">
