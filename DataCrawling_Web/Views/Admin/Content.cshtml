@model DataCrawling_Web.Models.Admin.ContentInfoModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "mtcSubNotice";
}

@section Header{
    @RenderPage("~/Views/Shared/Header/_HeaderAdmin.cshtml")

    <script src="~/Resource/Js/Admin/Content.js"></script>
    <link href="~/Resource/Css/Data/FileData.css" rel="stylesheet" />
    <link href="~/Resource/Css/Admin/Content.css" rel="stylesheet" />
}

@section Left{
    @RenderPage("~/Views/Shared/Left/_PartialLeft_Admin.cshtml")
}

@section Content{
    @RenderPage("~/Views/Admin/Shared/_gPathBar.cshtml")

    <section style="position: relative;">
        @if (ViewBag.Status == "new" || ViewBag.Status == "edit")
        {
            @RenderPage("~/Views/Shared/Board/_Write.cshtml", null)
        }
        else
        {
            <div class="set-option" data-no="@Model.NO">
                <table class="dataset-table fileDataDetail" id="fileDetailTableArea-pc">
                    <caption>소상공인시장진흥공단_상가(상권)정보로 파일데이터 정보 표로 분류체계, 제공기관 등 정보를 나타냄</caption>
                    <tbody>
                        <tr class="bg-beige tr">
                            <th class="th custom-cell-border-bottom custom-cell-border-right">노출상태</th>
                            <td class="td custom-cell-border-bottom">@(Model.VISIBLE == 1 ? "노출" : "미노출")</td>
                            <th class="th custom-cell-border-bottom custom-cell-border-right">노출순서</th>
                            <td class="td custom-cell-border-bottom">@Model.ORDER</td>
                        </tr>
                        <tr class="bg-beige tr">
                            <th class="th custom-cell-border-bottom custom-cell-border-right">수정일</th>
                            <td class="td custom-cell-border-bottom">@Model.E_DATE.ToString("yyyy년 MM dd일 HH:mm")</td>
                            <th class="th custom-cell-border-bottom custom-cell-border-right">조회수</th>
                            <td class="td custom-cell-border-bottom">@Model.READ_CNT</td>
                        </tr>
                        <tr class="bg-skyblue tr">
                            <th class="th custom-cell-border-bottom custom-cell-border-right">제목</th>
                            <td class="td custom-cell-border-bottom">@Html.Raw(Model.TITLE)</td>
                        </tr>
                        <tr class="bg-skyblue tr">
                            <th class="th custom-cell-border-bottom custom-cell-border-right">컨텐츠</th>
                            <td class="td custom-cell-border-bottom">
                                @Html.Raw(Model.CONTENT_BODY)
                            </td>
                        </tr>
                        <tr class="bg-green tr">
                            <th class="th custom-cell-border-right">변경자</th>
                            <td class="td">@Model.Get_UserName</td>
                        </tr>
                        @*<tr class="bg-skyblue tr">
                                <th class="th custom-cell-border-bottom custom-cell-border-right">기타 유의사항</th>
                                <td class="td custom-cell-border-bottom"></td>
                            </tr>
                            <tr class="bg-green tr">
                                <th class="th custom-cell-border-right">이용허락범위</th>
                                <td class="td">
                                    <div class="img-copyright">
                                        <a href="/ugs/selectPortalPolicyView.do" target="_blank" title="새 창으로 공공데이터포털 정책 열기">
                                            이용허락범위 제한 없음
                                        </a>
                                    </div>
                                </td>
                            </tr>*@
                    </tbody>
                </table>
            </div>
        }
    </section>

    <script>
        $(function () {
             $('#gPathBar h2').text('@ViewBag.Title');
        });
    </script>
}
